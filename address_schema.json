{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://yourdomain.com/schemas/myschema.json",
	"type": "object",
	"properties": {
	  "first_name": {"type": "string"},
	  "last_name": {"type": "string"},
	  "birthday": {"type": "string", "format": "date-time"},
	  "address": {
	    "type": "object",
	    "properties": {
	      "street_address": {"type": "string"},
	      "city": {"type": "string"},
	      "state": {"type": "string"},
	      "country": {"type": "string"}
	    }
	  }
	}
}